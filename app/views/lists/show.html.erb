<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1505686994434-e3cc5abf1330?q=80&w=2073&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
  <div class="container">
    <h1 color: white><%= @list.name %></h1>
  </div>
</div>

<button class="mt-2 btn btn-info text-decoration-none"><%= link_to "Add a bookmark", new_list_bookmark_path(@list) %></button>

  <% @list.bookmarks.each do |bookmark| %>
    <h3><%= bookmark.movie.title %></h3>
    <p><%= bookmark.comment %></p>
    <img src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %>" width="300">
  <% end %>
</div>
